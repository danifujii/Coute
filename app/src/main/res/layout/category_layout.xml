<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:id="@+id/category_layout"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:animateLayoutChanges="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_margin="1dp"
        android:background="@color/colorWhite">

        <com.example.daniel.projectnutella.graphic.CatIndicator
            android:id="@+id/indicator_view"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        
        <ImageView
            android:id="@+id/cat_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/cat_drinks"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:maxWidth="8dp"
            android:maxHeight="8dp"
            android:layout_toRightOf="@+id/indicator_view"/>

        <TextView
            android:id="@+id/cat_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Drinks"
            android:textColor="@color/colorBlack"
            android:textSize="26sp"
            android:paddingTop="10dp"
            android:paddingLeft="15dp"
            android:gravity="center_vertical"
            android:layout_toRightOf="@+id/cat_image_view"
            android:fontFamily="sans-serif-light"
            />

        <TextView
            android:id="@+id/cat_sum_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:text="$350"
            android:layout_alignParentRight="true"
            android:textColor="@color/colorBlack"
            android:gravity="center_vertical"
            android:paddingTop="12dp"
            android:paddingRight="16dp"
            />

    </RelativeLayout>

</LinearLayout>

